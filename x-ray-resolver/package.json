{
  "name": "x-ray-resolver",
  "version": "1.0.0",
  "description": "AppSync Lambda resolver with OpenTelemetry X-Ray tracing",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:@aws-sdk/* --external:@opentelemetry/*",
    "package": "npm run build && cd dist && zip -r function.zip index.js && cd ..",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "appsync",
    "lambda",
    "xray",
    "opentelemetry",
    "tracing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.52.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.54.2",
    "@opentelemetry/instrumentation-aws-lambda": "0.45.0",
    "@opentelemetry/instrumentation-http": "0.54.2",
    "@opentelemetry/propagator-aws-xray": "1.26.2",
    "@opentelemetry/sdk-node": "0.54.2",
    "@opentelemetry/resources": "1.28.0",
    "@opentelemetry/semantic-conventions": "1.28.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.145",
    "@types/node": "20.17.10",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@typescript-eslint/parser": "8.18.2",
    "@vitest/coverage-v8": "2.1.8",
    "esbuild": "0.24.2",
    "eslint": "9.18.0",
    "prettier": "3.4.2",
    "typescript": "5.7.3",
    "vitest": "2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
